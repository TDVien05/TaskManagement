<Window x:Class="Tomany.TaskManagement.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tomany.TaskManagement"
        mc:Ignorable="d"
        Title="Task Management - Create Account" Height="820" Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#0f7f3c" Offset="0"/>
                <GradientStop Color="#12b76a" Offset="0.35"/>
                <GradientStop Color="#f7fff9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="White" CornerRadius="16" Padding="26" Margin="18"
                BorderBrush="#d9f3e4" BorderThickness="1"
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="420">
            <Border.Effect>
                <DropShadowEffect Color="#33000000" BlurRadius="14" ShadowDepth="2" Opacity="0.8"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Create Account" FontSize="24" FontWeight="Bold" Foreground="#0f7f3c"/>
                <TextBlock Text="Fill in your account and profile details to get started."
                           Margin="0,4,0,18" Foreground="#52725b" TextWrapping="Wrap"/>

                <Grid Margin="0,0,0,12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Account -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Username" FontWeight="SemiBold" Foreground="#0f7f3c" Margin="0,0,10,0"/>
                    <TextBox x:Name="UsernameTextBox" Grid.Row="1" Grid.Column="0" Height="34" Padding="6"
                             Margin="0,4,10,8"
                             Background="#f3fff8" BorderBrush="#9bd7b3"/>

                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Email" FontWeight="SemiBold" Foreground="#0f7f3c" Margin="10,0,0,0"/>
                    <TextBox x:Name="EmailTextBox" Grid.Row="1" Grid.Column="1" Height="34" Padding="6"
                             Margin="10,4,0,8"
                             Background="#f3fff8" BorderBrush="#9bd7b3"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Password" FontWeight="SemiBold" Foreground="#0f7f3c" Margin="0,10,10,0"/>
                    <PasswordBox x:Name="PasswordBox" Grid.Row="3" Grid.Column="0" Height="34" Padding="6"
                                 Margin="0,4,10,8"
                                 Background="#f3fff8" BorderBrush="#9bd7b3"/>

                    <TextBlock Grid.Row="2" Grid.Column="1" Text="Confirm password" FontWeight="SemiBold" Foreground="#0f7f3c" Margin="10,10,0,0"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="3" Grid.Column="1" Height="34" Padding="6"
                                 Margin="10,4,0,8"
                                 Background="#f3fff8" BorderBrush="#9bd7b3"/>

                    <!-- Profile -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="First name" FontWeight="SemiBold" Foreground="#0f7f3c" Margin="0,10,10,0"/>
                    <TextBox x:Name="FirstNameTextBox" Grid.Row="5" Grid.Column="0" Height="34" Padding="6"
                             Margin="0,4,10,8"
                             Background="#f3fff8" BorderBrush="#9bd7b3"/>

                    <TextBlock Grid.Row="4" Grid.Column="1" Text="Last name" FontWeight="SemiBold" Foreground="#0f7f3c" Margin="10,10,0,0"/>
                    <TextBox x:Name="LastNameTextBox" Grid.Row="5" Grid.Column="1" Height="34" Padding="6"
                             Margin="10,4,0,8"
                             Background="#f3fff8" BorderBrush="#9bd7b3"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Phone" FontWeight="SemiBold" Foreground="#0f7f3c" Margin="0,10,10,0"/>
                    <TextBox x:Name="PhoneTextBox" Grid.Row="7" Grid.Column="0" Height="34" Padding="6"
                             Margin="0,4,10,8"
                             Background="#f3fff8" BorderBrush="#9bd7b3"/>

                    <TextBlock Grid.Row="6" Grid.Column="1" Text="Date of birth" FontWeight="SemiBold" Foreground="#0f7f3c" Margin="10,10,0,0"/>
                    <DatePicker x:Name="DobPicker" Grid.Row="7" Grid.Column="1" Height="34"
                                Margin="10,4,0,8"
                                Background="#f3fff8" BorderBrush="#9bd7b3" />

                    <!-- OTP Verification -->
                    <TextBlock Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Text="Email Verification (OTP)" FontWeight="SemiBold" Foreground="#0f7f3c" Margin="0,10,0,0"/>
                    <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                        <TextBox x:Name="OtpTextBox" Width="120" Height="34" Padding="6"
                                 Margin="0,4,10,8"
                                 Background="#f3fff8" BorderBrush="#9bd7b3"/>
                        <Button x:Name="SendOtpButton" Content="Send OTP" Width="100" Height="34"
                                Margin="0,4,8,8" Click="SendOtpButton_Click"/>
                        <Button x:Name="VerifyOtpButton" Content="Verify" Width="80" Height="34"
                                Margin="0,4,0,8" Click="VerifyOtpButton_Click"/>
                    </StackPanel>
                </Grid>

                <TextBlock x:Name="StatusTextBlock" Margin="0,6,0,10"
                           Foreground="#4b5b61" Text="Not submitted" TextWrapping="Wrap"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BackToLoginButton" Content="Back to Login" Width="120" Height="34"
                            Margin="0,0,10,0" Click="BackToLoginButton_Click" />
                    <Button x:Name="ResetButton" Content="Clear" Width="100" Height="34"
                            Margin="0,0,10,0" Click="ResetButton_Click" />
                    <Button x:Name="RegisterButton" Content="Create Account" Width="140" Height="36"
                            Foreground="White" FontWeight="SemiBold" Click="RegisterButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#16a34a" Offset="0"/>
                                <GradientStop Color="#0f7f3c" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.BorderBrush>
                            <SolidColorBrush Color="#0f7f3c"/>
                        </Button.BorderBrush>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>

