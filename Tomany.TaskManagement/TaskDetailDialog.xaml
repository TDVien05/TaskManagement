<Window x:Class="Tomany.TaskManagement.TaskDetailDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tomany.TaskManagement"
        mc:Ignorable="d"
        Title="Task Details" Height="650" Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinWidth="600" MinHeight="550">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0f7f3c" CornerRadius="6" Padding="15" Margin="0,0,0,20">
            <TextBlock x:Name="TitleTextBlock" Text="Create Task" 
                       FontSize="22" FontWeight="Bold" Foreground="White"/>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,5,0">
            <StackPanel>
                <!-- Task Name -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Task Title *" FontWeight="SemiBold" Foreground="#0f7f3c" Margin="0,0,0,5" FontSize="13"/>
                    <TextBox x:Name="TaskNameTextBox" Height="36" Padding="8,0" 
                             FontSize="13" BorderBrush="#9bd7b3" BorderThickness="1"
                             TextChanged="TaskNameTextBox_TextChanged"
                             ToolTip="Enter a descriptive title for the task"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Description" FontWeight="SemiBold" Foreground="#0f7f3c" Margin="0,0,0,5" FontSize="13"/>
                    <TextBox x:Name="DescriptionTextBox" Height="100" TextWrapping="Wrap" 
                             AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                             Padding="8" FontSize="13" BorderBrush="#9bd7b3" BorderThickness="1"
                             ToolTip="Provide detailed information about the task"/>
                </StackPanel>

                <!-- Assignee -->
                <StackPanel Margin="0,0,0,15">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Assignee" FontWeight="SemiBold" Foreground="#0f7f3c" FontSize="13"/>
                        <TextBlock x:Name="AssigneeHintTextBlock" Text=" (Only Managers can assign)" 
                                   FontSize="11" FontStyle="Italic" Foreground="#52725b" Margin="5,0,0,0"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                    <ComboBox x:Name="AssigneeComboBox" Height="36" Padding="8,0"
                              DisplayMemberPath="FullName"
                              SelectedValuePath="AccountId"
                              FontSize="13" BorderBrush="#9bd7b3" BorderThickness="1"
                              ToolTip="Select a team member to assign this task to">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ‘¤ " FontSize="13" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding FullName}" FontSize="13" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- Deadline -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Deadline" FontWeight="SemiBold" Foreground="#0f7f3c" Margin="0,0,0,5" FontSize="13"/>
                    <DatePicker x:Name="DeadlineDatePicker" Height="36" 
                                SelectedDateChanged="DeadlineDatePicker_SelectedDateChanged"
                                FontSize="13" BorderBrush="#9bd7b3" BorderThickness="1"
                                ToolTip="Select the due date for this task. Priority will be calculated automatically.">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="Padding" Value="8,0"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                    <Border Background="#f0fdf4" BorderBrush="#9bd7b3" BorderThickness="1" 
                            CornerRadius="4" Padding="8,6" Margin="0,8,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ“Š " FontSize="12" VerticalAlignment="Center"/>
                            <TextBlock x:Name="PriorityInfoTextBlock" 
                                       Text="Priority: Low (calculated from deadline)" 
                                       FontSize="11" Foreground="#52725b" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Status -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Status" FontWeight="SemiBold" Foreground="#0f7f3c" Margin="0,0,0,5" FontSize="13"/>
                    <ComboBox x:Name="StatusComboBox" Height="36" Padding="8,0" FontSize="13" 
                              BorderBrush="#9bd7b3" BorderThickness="1"
                              ToolTip="Select the current status of the task">
                        <ComboBoxItem Content="Pending" IsSelected="True"/>
                        <ComboBoxItem Content="In Progress"/>
                        <ComboBoxItem Content="Review"/>
                        <ComboBoxItem Content="Completed"/>
                    </ComboBox>
                </StackPanel>

                <!-- Link Submission -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Submission Link" FontWeight="SemiBold" Foreground="#0f7f3c" Margin="0,0,0,5" FontSize="13"/>
                    <TextBox x:Name="LinkSubmissionTextBox" Height="36" Padding="8,0" 
                             FontSize="13" BorderBrush="#9bd7b3" BorderThickness="1"
                             ToolTip="Optional: Add a link to the task submission or related resource"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2" BorderBrush="#d9f3e4" BorderThickness="0,1,0,0" Padding="0,15,0,0" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CancelButton" Content="Cancel" Width="110" Height="38" 
                        Margin="0,0,10,0" FontSize="13" Click="CancelButton_Click"
                        Background="White" BorderBrush="#9bd7b3" BorderThickness="1" 
                        Foreground="#0f7f3c" Cursor="Hand"/>
                <Button x:Name="SaveButton" Content="Save" Width="110" Height="38"
                        Background="#0f7f3c" Foreground="White" FontSize="13" FontWeight="SemiBold"
                        Click="SaveButton_Click" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

