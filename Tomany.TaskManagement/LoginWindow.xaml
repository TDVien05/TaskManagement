<Window x:Class="Tomany.TaskManagement.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tomany.TaskManagement"
        mc:Ignorable="d"
        Title="Task Management - Login" Height="500" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#0f7f3c" Offset="0"/>
                <GradientStop Color="#12b76a" Offset="0.35"/>
                <GradientStop Color="#f7fff9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="White" CornerRadius="16" Padding="26" Margin="18"
                BorderBrush="#d9f3e4" BorderThickness="1"
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="380">
            <Border.Effect>
                <DropShadowEffect Color="#33000000" BlurRadius="14" ShadowDepth="2" Opacity="0.8"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Login" FontSize="24" FontWeight="Bold" Foreground="#0f7f3c"/>
                <TextBlock Text="Enter your credentials to access your account."
                           Margin="0,4,0,24" Foreground="#52725b" TextWrapping="Wrap"/>

                <Grid Margin="0,0,0,12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Username" FontWeight="SemiBold" Foreground="#0f7f3c" Margin="0,0,0,4"/>
                    <TextBox x:Name="UsernameTextBox" Grid.Row="1" Height="34" Padding="6"
                             Margin="0,0,0,16"
                             Background="#f3fff8" BorderBrush="#9bd7b3"/>

                    <TextBlock Grid.Row="2" Text="Password" FontWeight="SemiBold" Foreground="#0f7f3c" Margin="0,0,0,4"/>
                    <PasswordBox x:Name="PasswordBox" Grid.Row="3" Height="34" Padding="6"
                                 Margin="0,0,0,16"
                                 Background="#f3fff8" BorderBrush="#9bd7b3"/>
                </Grid>

                <TextBlock x:Name="StatusTextBlock" Margin="0,0,0,16" 
                           Foreground="#4b5b61" Text="Not logged in" TextWrapping="Wrap"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,12">
                    <Button x:Name="RegisterButton" Content="Create Account" Width="130" Height="34"
                            Margin="0,0,10,0" Click="RegisterButton_Click" />
                    <Button x:Name="LoginButton" Content="Login" Width="100" Height="36"
                            Foreground="White" FontWeight="SemiBold" Click="LoginButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#16a34a" Offset="0"/>
                                <GradientStop Color="#0f7f3c" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.BorderBrush>
                            <SolidColorBrush Color="#0f7f3c"/>
                        </Button.BorderBrush>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>

