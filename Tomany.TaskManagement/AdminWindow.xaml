<Window x:Class="Tomany.TaskManagement.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tomany.TaskManagement"
        mc:Ignorable="d"
        Title="Task Management - Admin Dashboard" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#0f7f3c" Offset="0"/>
                <GradientStop Color="#12b76a" Offset="0.35"/>
                <GradientStop Color="#f7fff9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0f7f3c">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Admin Dashboard" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="WelcomeTextBlock" Text="Welcome, Admin" FontSize="14" Foreground="#e6f6ec"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="UserInfoTextBlock" Text="Admin" VerticalAlignment="Center" 
                               Foreground="White" Margin="0,0,15,0"/>
                    <Button x:Name="LogoutButton" Content="Logout" Width="80" Height="32"
                            Background="#16a34a" Foreground="White" Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="16" Margin="0,0,15,0"
                    BorderBrush="#d9f3e4" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#33000000" BlurRadius="8" ShadowDepth="2" Opacity="0.6"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Admin Menu" FontSize="18" FontWeight="Bold" Foreground="#0f7f3c" Margin="0,0,0,20"/>
                    
                    <Button x:Name="UsersButton" Content="Manage Users" Height="40" Margin="0,0,0,10"
                            Background="#f3fff8" BorderBrush="#9bd7b3" Foreground="#0f7f3c"
                            Click="UsersButton_Click"/>
                    <Button x:Name="ProjectsButton" Content="Manage Projects" Height="40" Margin="0,0,0,10"
                            Background="#f3fff8" BorderBrush="#9bd7b3" Foreground="#0f7f3c"
                            Click="ProjectsButton_Click"/>
                    <Button x:Name="TasksButton" Content="Manage Tasks" Height="40" Margin="0,0,0,10"
                            Background="#f3fff8" BorderBrush="#9bd7b3" Foreground="#0f7f3c"
                            Click="TasksButton_Click"/>
                    <Button x:Name="ManagerRequestsButton" Content="Manager Requests" Height="40" Margin="0,0,0,10"
                            Background="#f3fff8" BorderBrush="#9bd7b3" Foreground="#0f7f3c"
                            Click="ManagerRequestsButton_Click"/>
                    <Button x:Name="ReportsButton" Content="Reports" Height="40" Margin="0,0,0,10"
                            Background="#f3fff8" BorderBrush="#9bd7b3" Foreground="#0f7f3c"
                            Click="ReportsButton_Click"/>
                    <Button x:Name="SettingsButton" Content="Settings" Height="40"
                            Background="#f3fff8" BorderBrush="#9bd7b3" Foreground="#0f7f3c"
                            Click="SettingsButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="24"
                    BorderBrush="#d9f3e4" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#33000000" BlurRadius="8" ShadowDepth="2" Opacity="0.6"/>
                </Border.Effect>
                <Grid>
                    <!-- Dashboard View -->
                    <ScrollViewer x:Name="DashboardView">
                        <StackPanel>
                            <TextBlock Text="Dashboard Overview" 
                                       FontSize="22" FontWeight="Bold" Foreground="#0f7f3c" Margin="0,0,0,20"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Stats Cards -->
                                <Border Grid.Row="0" Grid.Column="0" Background="#f3fff8" CornerRadius="8" 
                                        Padding="20" Margin="0,0,10,15" BorderBrush="#9bd7b3" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Total Users" FontSize="14" Foreground="#52725b"/>
                                        <TextBlock x:Name="TotalUsersTextBlock" Text="0" FontSize="32" FontWeight="Bold" Foreground="#0f7f3c"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="0" Grid.Column="1" Background="#f3fff8" CornerRadius="8" 
                                        Padding="20" Margin="5,0,5,15" BorderBrush="#9bd7b3" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Total Projects" FontSize="14" Foreground="#52725b"/>
                                        <TextBlock x:Name="TotalProjectsTextBlock" Text="0" FontSize="32" FontWeight="Bold" Foreground="#0f7f3c"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="0" Grid.Column="2" Background="#f3fff8" CornerRadius="8" 
                                        Padding="20" Margin="10,0,0,15" BorderBrush="#9bd7b3" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Total Tasks" FontSize="14" Foreground="#52725b"/>
                                        <TextBlock x:Name="TotalTasksTextBlock" Text="0" FontSize="32" FontWeight="Bold" Foreground="#0f7f3c"/>
                                    </StackPanel>
                                </Border>

                                <!-- Content Placeholder -->
                                <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" 
                                        Background="#f7fff9" CornerRadius="8" Padding="20" Margin="0,10,0,0"
                                        BorderBrush="#d9f3e4" BorderThickness="1">
                                    <TextBlock x:Name="ContentTextBlock" Text="Select a menu item to get started." 
                                               FontSize="16" Foreground="#52725b" TextWrapping="Wrap"/>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- User Management View -->
                    <StackPanel x:Name="UserManagementView" Visibility="Collapsed">
                        <TextBlock Text="Manage Users" FontSize="22" FontWeight="Bold" 
                                   Foreground="#0f7f3c" Margin="0,0,0,20"/>
                        <DataGrid x:Name="UsersDataGrid" AutoGenerateColumns="False" IsReadOnly="True"
                                  HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                                  Background="White" BorderBrush="#d9f3e4" BorderThickness="1"
                                  CanUserAddRows="False">
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Block/Unblock User" Click="UserBlockUnblock_Click"/>
                                    <MenuItem Header="Reset Password" Click="UserResetPassword_Click"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding AccountId}" Width="50"/>
                                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                                <DataGridTextColumn Header="FirstName" Binding="{Binding FirstName}" Width="*"/>
                                <DataGridTextColumn Header="LastName" Binding="{Binding LastName}" Width="*"/>
                                <DataGridTextColumn Header="PhoneNumber" Binding="{Binding PhoneNumber}" Width="*"/>
                                <DataGridTextColumn Header="DateOfBirth" Binding="{Binding DateOfBirth}" Width="*"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="2*"/>
                                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="100"/>
                                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" IsReadOnly="True" Width="60"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                    
                    <!-- Project Management View -->
                    <StackPanel x:Name="ProjectManagementView" Visibility="Collapsed">
                        <TextBlock Text="Manage Projects" FontSize="22" FontWeight="Bold" 
                                   Foreground="#0f7f3c" Margin="0,0,0,20"/>
                        <DataGrid x:Name="ProjectsDataGrid" AutoGenerateColumns="False" IsReadOnly="True"
                                  HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                                  Background="White" BorderBrush="#d9f3e4" BorderThickness="1"
                                  CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding ProjectId}" Width="50"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding ProjectName}" Width="*"/>
                                <DataGridTextColumn Header="Description" Binding="{Binding ProjectDescription}" Width="2*"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding ProjectStatus}" Width="100"/>
                                <DataGridTextColumn Header="Created By" Binding="{Binding CreatedByUsername}" Width="120"/>
                                <DataGridTextColumn Header="Created At" Binding="{Binding CreateAt}" Width="120"/>
                                <DataGridTextColumn Header="Updated At" Binding="{Binding UpdateAt}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <!-- Manager Requests View -->
                    <StackPanel x:Name="ManagerRequestsView" Visibility="Collapsed">
                        <TextBlock Text="Manager Requests" FontSize="22" FontWeight="Bold" 
                                   Foreground="#0f7f3c" Margin="0,0,0,20"/>
                        <DataGrid x:Name="ManagerRequestsDataGrid" AutoGenerateColumns="False" IsReadOnly="True"
                                  HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                                  Background="White" BorderBrush="#d9f3e4" BorderThickness="1"
                                  CanUserAddRows="False">
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Approve" Click="ApproveRequest_Click"/>
                                    <MenuItem Header="Reject" Click="RejectRequest_Click"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding AccountId}" Width="50"/>
                                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                                <DataGridTextColumn Header="FirstName" Binding="{Binding FirstName}" Width="*"/>
                                <DataGridTextColumn Header="LastName" Binding="{Binding LastName}" Width="*"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="2*"/>
                                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>


