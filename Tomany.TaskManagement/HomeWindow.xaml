<Window x:Class="Tomany.TaskManagement.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tomany.TaskManagement"
        xmlns:converters="clr-namespace:Tomany.TaskManagement.Converters"
        mc:Ignorable="d"
        Title="Task Management - Home" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Window.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#0f7f3c" Offset="0"/>
                <GradientStop Color="#12b76a" Offset="0.35"/>
                <GradientStop Color="#f7fff9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0f7f3c">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Task Management" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="WelcomeTextBlock" Text="Welcome back!" FontSize="14" Foreground="#e6f6ec"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="UserInfoTextBlock" Text="User" VerticalAlignment="Center" 
                               Foreground="White" Margin="0,0,15,0"/>
                    <Button x:Name="LogoutButton" Content="Logout" Width="80" Height="32"
                            Background="#16a34a" Foreground="White" Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="16" Margin="0,0,15,0"
                    BorderBrush="#d9f3e4" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#33000000" BlurRadius="8" ShadowDepth="2" Opacity="0.6"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Menu" FontSize="18" FontWeight="Bold" Foreground="#0f7f3c" Margin="0,0,0,20"/>
                    
                    <Button x:Name="MyTasksButton" Content="My Tasks" Height="40" Margin="0,0,0,10"
                            Background="#f3fff8" BorderBrush="#9bd7b3" Foreground="#0f7f3c"
                            Click="MyTasksButton_Click"/>
                    <Button x:Name="MyProjectsButton" Content="My Projects" Height="40" Margin="0,0,0,10"
                            Background="#f3fff8" BorderBrush="#9bd7b3" Foreground="#0f7f3c"
                            Click="MyProjectsButton_Click"/>
                    <Button x:Name="ProfileButton" Content="My Profile" Height="40" Margin="0,0,0,10"
                            Background="#f3fff8" BorderBrush="#9bd7b3" Foreground="#0f7f3c"
                            Click="ProfileButton_Click"/>
                    <Button x:Name="SettingsButton" Content="Settings" Height="40"
                            Background="#f3fff8" BorderBrush="#9bd7b3" Foreground="#0f7f3c"
                            Click="SettingsButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="24"
                    BorderBrush="#d9f3e4" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#33000000" BlurRadius="8" ShadowDepth="2" Opacity="0.6"/>
                </Border.Effect>
                <ScrollViewer>
                    <StackPanel>
                        <TextBlock x:Name="ContentTitleTextBlock" Text="Dashboard" 
                                   FontSize="22" FontWeight="Bold" Foreground="#0f7f3c" Margin="0,0,0,20"/>

                        <!-- Dashboard -->
                        <StackPanel x:Name="DashboardSection">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Background="#f3fff8" CornerRadius="8" 
                                        Padding="20" Margin="0,0,10,15" BorderBrush="#9bd7b3" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="My Tasks" FontSize="14" Foreground="#52725b"/>
                                        <TextBlock x:Name="MyTasksCountTextBlock" Text="0" FontSize="32" FontWeight="Bold" Foreground="#0f7f3c"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="0" Grid.Column="1" Background="#f3fff8" CornerRadius="8" 
                                        Padding="20" Margin="10,0,0,15" BorderBrush="#9bd7b3" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="My Projects" FontSize="14" Foreground="#52725b"/>
                                        <TextBlock x:Name="MyProjectsCountTextBlock" Text="0" FontSize="32" FontWeight="Bold" Foreground="#0f7f3c"/>
                                    </StackPanel>
                                </Border>

                                <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                        Background="#f7fff9" CornerRadius="8" Padding="20" Margin="0,10,0,0"
                                        BorderBrush="#d9f3e4" BorderThickness="1">
                                    <TextBlock x:Name="ContentTextBlock" Text="Welcome to Task Management! Select a menu item to get started." 
                                               FontSize="16" Foreground="#52725b" TextWrapping="Wrap"/>
                                </Border>
                            </Grid>
                        </StackPanel>

                        <!-- Projects -->
                        <StackPanel x:Name="ProjectsSection" Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Background="#f3fff8" CornerRadius="8"
                                        Padding="20" Margin="0,0,10,10" BorderBrush="#9bd7b3" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="My Tasks" FontSize="14" Foreground="#52725b"/>
                                        <TextBlock x:Name="ProjectTasksCountTextBlock" Text="0" FontSize="32" FontWeight="Bold" Foreground="#0f7f3c"/>
                                    </StackPanel>
                                </Border>
                                <Border Grid.Column="1" Background="#f3fff8" CornerRadius="8"
                                        Padding="20" Margin="10,0,0,10" BorderBrush="#9bd7b3" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="My Projects" FontSize="14" Foreground="#52725b"/>
                                        <TextBlock x:Name="ProjectProjectsCountTextBlock" Text="0" FontSize="32" FontWeight="Bold" Foreground="#0f7f3c"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <Border Background="#f7fff9" CornerRadius="8" Padding="20" Margin="0,0,0,10"
                                    BorderBrush="#d9f3e4" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="ThÃ´ng tin há»“ sÆ¡" FontSize="16" FontWeight="SemiBold" Foreground="#0f7f3c" Margin="0,0,0,8"/>
                                    <TextBlock x:Name="ProfileSummaryTextBlock" Text="Loading profile..."
                                               FontSize="14" Foreground="#52725b" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>


                            <!-- Filter Controls with Icon -->
                            <Grid Margin="0,0,0,10" HorizontalAlignment="Left">
                                <!-- Search Box Container -->
                                <Border Background="#f3fff8" BorderBrush="#9bd7b3" BorderThickness="1" 
                                        CornerRadius="4" Width="280" Height="32">
                                    <Grid>
                                        <!-- Search Icon -->
                                        <Path Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                              Fill="#9bd7b3" Width="16" Height="16" Stretch="Uniform"
                              HorizontalAlignment="Left" VerticalAlignment="Center" 
                              Margin="8,0,0,0" IsHitTestVisible="False"/>
                                        
                                        <!-- TextBox -->
                                        <TextBox x:Name="ProjectSearchTextBox" 
                                                 Padding="30,5,30,5" Background="Transparent" BorderThickness="0"
                                                 VerticalContentAlignment="Center"
                                                 Text="Search projects..." FontStyle="Italic" Foreground="#999"
                                                 GotFocus="ProjectSearchTextBox_GotFocus" 
                                                 LostFocus="ProjectSearchTextBox_LostFocus"
                                                 TextChanged="ProjectSearchTextBox_TextChanged"/>
                                        
                                        <!-- Clear Button (X) -->
                                        <Button x:Name="ClearSearchButton" Content="Ã—" 
                                                Width="20" Height="20" FontSize="16" FontWeight="Bold"
                                                Background="Transparent" BorderThickness="0" 
                                                Foreground="#9bd7b3" Cursor="Hand"
                                                HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"
                                                Visibility="Collapsed" Click="ClearSearchButton_Click"
                                                ToolTip="Clear search"/>
                                    </Grid>
                                </Border>
                            </Grid>

                            <ListView x:Name="ProjectsListView"
                                      Background="Transparent"
                                      BorderBrush="Transparent"
                                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                      MouseDoubleClick="ProjectsListView_MouseDoubleClick">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0,0,0,10"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewItem">
                                                    <Border x:Name="Border"
                                                            Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <!-- Hover effect -->
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Border" Property="Background" Value="#e6f9ed"/>
                                                            <Setter Property="Cursor" Value="Hand"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#f7fff9" CornerRadius="8" Padding="15" Margin="0,0,0,10"
                                                BorderBrush="#d9f3e4" BorderThickness="1">
                                            <Border.Effect>
                                                <DropShadowEffect Color="#33000000" BlurRadius="4" ShadowDepth="1" Opacity="0.4"/>
                                            </Border.Effect>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding ProjectName}"
                                                               FontSize="18" FontWeight="Bold" Foreground="#0f7f3c"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding ProjectDescription}"
                                                               FontSize="14" Foreground="#52725b" Margin="0,5,0,0"
                                                               TextWrapping="Wrap" MaxHeight="60" TextTrimming="CharacterEllipsis"
                                                               ToolTip="{Binding ProjectDescription}"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                        <TextBlock Text="Status: " FontWeight="SemiBold" Foreground="#0f7f3c"/>
                                                        <TextBlock Text="{Binding ProjectStatus}" 
                                                                   Foreground="{Binding ProjectStatus, Converter={StaticResource StatusToColorConverter}}"
                                                                   FontWeight="SemiBold"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                        <TextBlock Text="Created: " FontWeight="SemiBold" Foreground="#0f7f3c"/>
                                                        <TextBlock Text="{Binding CreateAt, StringFormat='{}{0:dd/MM/yyyy}'}" Foreground="#52725b"/>
                                                    </StackPanel>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                    <TextBlock Text="Updated" FontSize="12" Foreground="#0f7f3c" HorizontalAlignment="Center"/>
                                                    <TextBlock Text="{Binding UpdateAt, StringFormat='{}{0:dd/MM}'}"
                                                               FontSize="16" FontWeight="Bold" Foreground="#16a34a"
                                                               HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <!-- Empty State -->
                            <Border x:Name="EmptyStatePanel" Visibility="Collapsed"
                                    Background="#f7fff9" CornerRadius="8" Padding="60,40"
                                    BorderBrush="#d9f3e4" BorderThickness="1" Margin="0,10,0,0">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ“" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                                    <TextBlock x:Name="EmptyStateMessage" Text="No projects found" 
                                               FontSize="18" FontWeight="SemiBold" Foreground="#0f7f3c"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Try adjusting your search or create a new project" 
                                               FontSize="14" Foreground="#52725b" Margin="0,8,0,0"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Profile -->
                        <StackPanel x:Name="ProfileSection" Visibility="Collapsed">
                            <TextBlock Text="ThÃ´ng tin cÃ¡ nhÃ¢n" FontSize="18" FontWeight="SemiBold" Foreground="#0f7f3c"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                                    <TextBlock Text="First name" FontWeight="SemiBold" Foreground="#0f7f3c"/>
                                    <TextBox x:Name="FirstNameTextBox" Height="32" Padding="6"
                                             Background="#f3fff8" BorderBrush="#9bd7b3"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,10">
                                    <TextBlock Text="Last name" FontWeight="SemiBold" Foreground="#0f7f3c"/>
                                    <TextBox x:Name="LastNameTextBox" Height="32" Padding="6"
                                             Background="#f3fff8" BorderBrush="#9bd7b3"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                                    <TextBlock Text="Email" FontWeight="SemiBold" Foreground="#0f7f3c"/>
                                    <TextBox x:Name="EmailTextBox" Height="32" Padding="6"
                                             Background="#f3fff8" BorderBrush="#9bd7b3"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,10">
                                    <TextBlock Text="Phone" FontWeight="SemiBold" Foreground="#0f7f3c"/>
                                    <TextBox x:Name="PhoneTextBox" Height="32" Padding="6"
                                             Background="#f3fff8" BorderBrush="#9bd7b3"/>
                                </StackPanel>
                                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,10,10">
                                    <TextBlock Text="Date of birth" FontWeight="SemiBold" Foreground="#0f7f3c"/>
                                    <DatePicker x:Name="DobPicker" Height="32"
                                                Background="#f3fff8" BorderBrush="#9bd7b3"/>
                                </StackPanel>
                            </Grid>

                            <Button x:Name="SaveProfileButton" Content="Save profile" Width="140" Height="34"
                                    HorizontalAlignment="Left" Click="SaveProfileButton_Click"
                                    Background="#16a34a" Foreground="White"/>

                            <Separator/>

                            <TextBlock Text="Äá»•i máº­t kháº©u" FontSize="18" FontWeight="SemiBold" Foreground="#0f7f3c"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                                    <TextBlock Text="Current password" FontWeight="SemiBold" Foreground="#0f7f3c"/>
                                    <PasswordBox x:Name="CurrentPasswordBox" Height="32" Padding="6"
                                                 Background="#f3fff8" BorderBrush="#9bd7b3"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,10,10">
                                    <TextBlock Text="New password" FontWeight="SemiBold" Foreground="#0f7f3c"/>
                                    <PasswordBox x:Name="NewPasswordBox" Height="32" Padding="6"
                                                 Background="#f3fff8" BorderBrush="#9bd7b3"/>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,10">
                                    <TextBlock Text="Confirm new password" FontWeight="SemiBold" Foreground="#0f7f3c"/>
                                    <PasswordBox x:Name="ConfirmPasswordBox" Height="32" Padding="6"
                                                 Background="#f3fff8" BorderBrush="#9bd7b3"/>
                                </StackPanel>
                            </Grid>

                            <Button x:Name="ChangePasswordButton" Content="Change password" Width="160" Height="34"
                                    HorizontalAlignment="Left" Click="ChangePasswordButton_Click"
                                    Background="#0f7f3c" Foreground="White"/>

                            <Separator Margin="0,20,0,20" />

                            <!-- Request Manager Button (for Users) -->
                            <Button x:Name="RequestManagerButton" Content="Request to be Manager" Width="200" Height="34"
                                    HorizontalAlignment="Left" Click="RequestManagerButton_Click"
                                    Background="#16a34a" Foreground="White" Visibility="Collapsed"/>

                            <!-- Pending Badge (for Applicants) -->
                            <Border x:Name="PendingManagerBadge" Background="#fef3c7" BorderBrush="#f59e0b" 
                                    BorderThickness="2" CornerRadius="6" Padding="12,8" Width="250"
                                    HorizontalAlignment="Left" Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="â³" FontSize="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Manager Request Pending" 
                                               Foreground="#92400e" FontWeight="SemiBold" FontSize="14"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <TextBlock x:Name="StatusTextBlock" Foreground="#52725b" TextWrapping="Wrap" Margin="0,6,0,0"/>
                        </StackPanel>

                        <!-- Project Detail Section (New) -->
                        <StackPanel x:Name="ProjectDetailSection" Visibility="Collapsed">
                            <!-- Back Button -->
                            <Button x:Name="BackToProjectsButton" Content="&lt; Back to Projects" 
                                    Background="Transparent" BorderBrush="Transparent" Foreground="#0f7f3c"
                                    FontWeight="SemiBold" HorizontalAlignment="Left" Margin="0,0,0,15"
                                    Click="BackToProjectsButton_Click"/>

                            <!-- Project Header -->
                            <TextBlock x:Name="ProjectDetailNameTextBlock" Text="Project Name"
                                       FontSize="22" FontWeight="Bold" Foreground="#0f7f3c" Margin="0,0,0,5"/>
                            <TextBlock x:Name="ProjectDetailDescriptionTextBlock" Text="Project description goes here..."
                                       FontSize="14" Foreground="#52725b" TextWrapping="Wrap" Margin="0,0,0,15"/>

                            <!-- Project Metadata Cards -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Status Card -->
                                <Border Grid.Column="0" Background="#f3fff8" CornerRadius="8"
                                        Padding="15" Margin="0,0,5,0" BorderBrush="#9bd7b3" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Status" FontSize="12" Foreground="#52725b"/>
                                        <TextBlock x:Name="ProjectDetailStatusTextBlock" Text="In Progress" 
                                                   FontSize="16" FontWeight="Bold" Margin="0,5,0,0"
                                                   Foreground="{Binding Text, RelativeSource={RelativeSource Self}, Converter={StaticResource StatusToColorConverter}}"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Created Date Card -->
                                <Border Grid.Column="1" Background="#f3fff8" CornerRadius="8"
                                        Padding="15" Margin="5,0,5,0" BorderBrush="#9bd7b3" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Created" FontSize="12" Foreground="#52725b"/>
                                        <TextBlock x:Name="ProjectDetailCreatedTextBlock" Text="01/12/2025" 
                                                   FontSize="16" FontWeight="Bold" Foreground="#0f7f3c" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Last Updated Card -->
                                <Border Grid.Column="2" Background="#f3fff8" CornerRadius="8"
                                        Padding="15" Margin="5,0,0,0" BorderBrush="#9bd7b3" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="Last Updated" FontSize="12" Foreground="#52725b"/>
                                        <TextBlock x:Name="ProjectDetailDueDateTextBlock" Text="15/12/2025" 
                                                   FontSize="16" FontWeight="Bold" Foreground="#16a34a" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Tasks List -->
                            <TextBlock Text="Tasks in this Project" FontSize="18" FontWeight="Bold" Foreground="#0f7f3c" Margin="0,10,0,10"/>
                            <ListView x:Name="TasksListView" MaxHeight="250" Background="Transparent" BorderBrush="#d9f3e4">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="10" Margin="0,0,0,5" CornerRadius="4" BorderBrush="#d9f3e4" BorderThickness="1" Background="#f7fff9">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding TaskName}" FontWeight="Bold" Foreground="#0f7f3c"/>
                                                    <TextBlock Text="{Binding TaskDescription}" TextWrapping="Wrap" Foreground="#52725b"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="1" Text="{Binding TaskStatus}" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="#16a34a"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                            <!-- Members List -->
                            <TextBlock Text="Project Members" FontSize="18" FontWeight="Bold" Foreground="#0f7f3c" Margin="0,20,0,10"/>
                            <ItemsControl x:Name="MembersItemsControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="8" Margin="0,0,0,5" CornerRadius="4" BorderBrush="#d9f3e4" BorderThickness="1" Background="#f7fff9">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Account.Username}" FontWeight="Bold" Foreground="#0f7f3c"/>
                                                <TextBlock Text=" - " Foreground="#52725b"/>
                                                <TextBlock Text="{Binding RoleInProject}" Foreground="#52725b"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>
