<UserControl x:Class="Tomany.TaskManagement.UserSearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="600">
    <Border Background="White" CornerRadius="8" Padding="20" BorderBrush="#d9f3e4" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Text="Add Team Members" FontSize="18" FontWeight="Bold"
                       Foreground="#0f7f3c" Margin="0,0,0,15"/>

            <!-- Search Box -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderBrush="#9bd7b3" BorderThickness="1" CornerRadius="4">
                    <Grid>
                        <TextBox x:Name="SearchTextBox" Height="36" Padding="35,0,8,0"
                                 FontSize="13" BorderThickness="0"
                                 TextChanged="SearchTextBox_TextChanged"
                                 VerticalContentAlignment="Center"/>
                        <TextBlock Text="ðŸ” Search by name or email..." FontSize="13"
                                   Foreground="#9ca3af" Margin="10,0,0,0"
                                   VerticalAlignment="Center" IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <Button Grid.Column="1" x:Name="SearchButton" Content="Search" Width="100" Height="36"
                        Margin="10,0,0,0" Background="#0f7f3c" Foreground="White" FontWeight="SemiBold"
                        Click="SearchButton_Click"/>
            </Grid>

            <!-- Search Results -->
            <Border Grid.Row="2" BorderBrush="#d9f3e4" BorderThickness="1" CornerRadius="4" Margin="0,0,0,15">
                <Grid>
                    <TextBlock x:Name="SearchPlaceholderText" Text="Search results will appear here..."
                               FontSize="13" Foreground="#9ca3af" HorizontalAlignment="Center"
                               VerticalAlignment="Center" Margin="20"/>
                    <ListBox x:Name="SearchResultsListBox" BorderThickness="0"
                             SelectionMode="Single" ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10,8" Margin="0,2" Background="#f9fafb"
                                        BorderBrush="#e5e7eb" BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="ðŸ‘¤" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding FullName}" FontWeight="SemiBold" FontSize="13" Foreground="#0f7f3c"/>
                                            <TextBlock Text="{Binding Email}" FontSize="11" Foreground="#6b7280"/>
                                        </StackPanel>

                                        <Button Grid.Column="2" Content="Add" Width="70" Height="28"
                                                Background="#0f7f3c" Foreground="White" FontSize="12"
                                                Click="AddUserButton_Click" Tag="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Separator -->
            <Border Grid.Row="3" Height="1" Background="#d9f3e4" Margin="0,10"/>

            <!-- Selected Team Members -->
            <StackPanel Grid.Row="4">
                <Grid Margin="0,15,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Team Members" FontSize="16" FontWeight="SemiBold"
                               Foreground="#0f7f3c"/>
                    <TextBlock Grid.Column="1" x:Name="TeamMemberCountText" Text="0 members"
                               FontSize="12" Foreground="#6b7280" VerticalAlignment="Center"/>
                </Grid>

                <Border BorderBrush="#d9f3e4" BorderThickness="1" CornerRadius="4" MaxHeight="200">
                    <Grid>
                        <TextBlock x:Name="TeamPlaceholderText" Text="No team members added yet..."
                                   FontSize="13" Foreground="#9ca3af" HorizontalAlignment="Center"
                                   VerticalAlignment="Center" Margin="20"/>
                        <ListBox x:Name="TeamMembersListBox" BorderThickness="0"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10,8" Margin="0,2" Background="#f0fdf4"
                                            BorderBrush="#d9f3e4" BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="âœ“" FontSize="16" Foreground="#0f7f3c"
                                                       FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding FullName}" FontWeight="SemiBold" FontSize="13" Foreground="#0f7f3c"/>
                                                <TextBlock Text="{Binding Email}" FontSize="11" Foreground="#52725b"/>
                                            </StackPanel>

                                            <Button Grid.Column="2" Content="Remove" Width="70" Height="28"
                                                    Background="#fee2e2" BorderBrush="#fca5a5" Foreground="#dc2626"
                                                    FontSize="12" Click="RemoveUserButton_Click" Tag="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
